<% @page_title = "Programs" %>

<div id="pads">
 <%= link_to("Add New Program", {:action => 'new'}, :class => 'btn btn-success btn-sm') %>
</div>

<div class="panel panel-primary">
 <div class="panel-heading">
  Programs
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @programs.size %> 
  </div>
   <%= @programs.size > 1 ? " programs found" : " program found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="program list">
    <tr class="header">
     <th>Issue</th>
     <th>Title</th>
     <th>Amount</th>
     <th>Start Date</th>
     <th>Completion Date</th>
     <th>Actions</th>
    </tr>

    <% @programs.each do |program| %>
     <tr class="<%= cycle('odd', 'even') %>">
      <td><%= program.issue.title if program.issue %></td>
      <td><%= program.title %></td>
      <td><%= number_to_currency(program.amount, :precision => 2, :unit => "Php", :format => "%u %n") %></td>
      <td><%= program.start %></td>
      <td><%= program.completion %></td>
      <td class="actions">
      <%= link_to("Show", {:action => 'show', :id => program.id}, :class => 'btn btn-primary btn-xs') %>
      <%= link_to("Edit", {:action => 'edit', :id => program.id}, :class => 'btn btn-default btn-xs') %>
      <%= link_to("Delete", {:action => 'delete', :id => program.id}, :class => 'btn btn-danger btn-xs') %>
       </td>
      </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>
