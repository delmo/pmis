<% @page_title = "Users" %>

<div class="panel panel-primary">
 <div class="panel-heading">
  Users
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @users.size %> 
  </div>
   <%= @users.size > 1 ? " users found" : " user found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="user list">
  <tr class="header">
   <th>Department</th>
   <th>Name</th>
   <th>Surname</th>
   <th>Role</th>
   <th>Active</th>
   <th>Actions</th>
  </tr>
  <% @users.each do |user| %>
   <tr class="<%= cycle('odd', 'even') %>">
    <td><%= user.department.name if user.department %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.role %></td>
    <td><%= user.is_active %></td>
    <td class="actions">
     <%= link_to "Show", users_show_path(id: user.id), :class => 'btn btn-primary btn-xs' %>
     <%= link_to "Edit", users_modify_path(id: user.id), :class => 'btn btn-default btn-xs' %>
    </td>
   </tr>
  <% end %>
 </table>
</div>
</div>
</div>
