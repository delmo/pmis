<% @page_title = "Departments" %>
<div id="pads">
 <%= link_to("Add New Department", {:action => 'new'}, :class => 'btn btn-success btn-sm') %>
</div>

<div class="panel panel-primary">
 <div class="panel-heading">
  Departments
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @departments.size %> 
  </div>
   <%= @departments.size > 1 ? " departments found" : " department found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="department list">
  <tr class="header">
   <th>Sector</th>
   <th>Department's name</th>
   <th>Actions</th>
  </tr>
  <% @departments.each do |department| %>
   <tr class="<%= cycle('odd', 'even') %>">
    <td><%= department.sector.name if department.sector %></td>
    <td><%= department.name %></td>
    <td class="actions">
     <%= link_to "Show", department, :class => 'btn btn-primary btn-xs' %>
     <%= link_to "Edit", edit_department_path(department), :class => 'btn btn-default btn-xs' %>
     <%= link_to "Delete", department, method: :delete, data: {confirm: 'Are you sure?'}, :class => 'btn btn-danger btn-xs' %>
    </td>
   </tr>
  <% end %>
 </table>
</div>
</div>
</div>
