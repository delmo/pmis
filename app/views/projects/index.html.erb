<% @page_title = "Projects" %>

<div id="pads">
 <%= link_to("Add New Project", {:action => 'new'}, :class => 'btn btn-success btn-sm') %>
</div>


<div class="panel panel-primary">
 <div class="panel-heading">
  Projects
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @projects.size %> 
  </div>
   <%= @projects.size > 1 ? " projects found" : " project found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="project list">
    <tr class="header">
     <th>Issue</th>
     <th>Program</th>
     <th>Title</th>
     <th>Amount</th>
     <th>Start Date</th>
     <th>Completion Date</th>
    </tr>

    <% @projects.each do |project| %>
     <tr class="<%= cycle('odd', 'even') %>">
      <td><%= project.issue.title if project.issue %></td>
      <td><%= project.program.title if project.program %></td>
      <td><%= project.title %></td>
      <td><%= number_to_currency(project.amount, :precision => 2, :unit => "Php", :format => "%u %n") %></td>
      <td><%= project.start %></td>
      <td><%= project.completion %></td>
      <td class="actions">
      <%= link_to("Show", {:action => 'show', :id => project.id}, :class => 'btn btn-primary btn-xs') %>
      <%= link_to("Edit", {:action => 'edit', :id => project.id}, :class => 'btn btn-default btn-xs') %>
      <%= link_to("Delete", {:action => 'delete', :id => project.id}, :class => 'btn btn-danger btn-xs') %>
       </td>
      </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>
