<% @page_title = "Delete an activity" %>

<div> 
 <%= link_to("Back to list", {:action => "index"}, :class => "btn btn-primary") %>
</div>

<div class="activity delete">
 <h2>Delete Activity</h2>

 <%= form_for(:activity, :url => {:action => 'destroy', :id => @activity.id}) do |f| %>

  <p>Are you sure you want to permanently delete this activity?</p>

  <p class="reference-name"><%= @activity.title %></p>

  <div>
   <%= submit_tag("Delete Activity", :class => "btn btn-danger btn") %>
  </div>

 <% end %>
</div>
