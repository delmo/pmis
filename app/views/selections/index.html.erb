<% @page_title = "Portfolio of Projects" %>

<div id="pads">
</div>

<div class="btn-group">
 <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
  Rank by sector <span class="caret"></span>
 </button>
 <ul class="dropdown-menu" role="menu">
   <li><%= link_to "Economic Services", {controller: :selections, action: :economic} %> 
   <li><%= link_to "General Public", {controller: :selections, action: :general} %> 
   <li><%= link_to "Social Services", {controller: :selections, action: :social} %> 
   <li><%= link_to "Other Services", {controller: :selections, action: :other} %> 
  </ul>
 </div>

<div id="pads">
</div>

<div class="panel panel-primary">
 <div class="panel-heading">
  <%= Time.now.year+1 %> List of evaluated programs, projects and activities 
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @ppas.size %> 
  </div>
   <%= @ppas.size > 1 ? " ppas".upcase + " found" : " ppa".upcase + " found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="ppa list">
    <tr class="header">
     <th>Issue</th>
     <th>Sector</th>
     <th>Title</th>
     <th>Amount</th>
     <th>Score</th>
     <th class="text-center">Rank</th>
     <!-- <th>Action</th> -->
    </tr>

    <% rank = 0 %>
    <% @ppas.each do |ppa| %>
     <tr class="<%= cycle('odd', 'even') %>">
      <td><%= ppa.issue.title if ppa.issue %></td>
      <td><%= ppa.sector.name %></td>
      <td><%= ppa.title %>
      <td><%= number_to_currency(ppa.amount, :precision => 2, :unit => "Php", :format => "%u %n") %></td>
      <td><%= ppa.rank_cart.total_score %></td>
      <td class="text-center"><%= rank += 1 %>
      </tr>
    <% end %>
   </table>
  </div>
 </div>
</div>
