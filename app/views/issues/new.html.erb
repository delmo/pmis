<% @page_title = "Create Issue" %>
<div> 
 <%= link_to("Back to list", {:action => "index"}, :class => "btn btn-primary") %>
</div>

<div class="issue create">
 <h2>Create Issue</h2>

 <%= form_for(:issue, :url => {:action => 'create'}, :html => {:role => "form"}) do |f| %>

  <%= render(:partial => 'form', :locals => {:f => f}) %>

  <div class="form-group">
   <div class="col-sm-2"></div>
   <div class="col-sm-10">
    <%= submit_tag("Create Issue", :class => "btn btn-default") %>
   </div>
  </div>

 <% end%>
</div>
