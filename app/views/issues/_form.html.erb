<%= error_messages_for(@issue) %>

<div  class="form-horizontal">
 <div class="form-group">
  <%= f.label(:department_id, "Department", :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.select(:department_id, @departments.map {|d| [d.name, d.id]}, {}, {:class => "form-control"}) %> 
  </div>
 </div>

 <div class="form-group">
  <%= f.label(:title, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.text_field(:title, :class => "form-control", :placeholder => "Enter title") %> 
  </div>
 </div>
 
 <div class="form-group">
  <%= f.label(:implication, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.text_area(:implication, :size => "40x5", :class => "form-control", :placeholder => "Implication") %> 
  </div>
 </div>
 
 <div class="form-group">
  <%= f.label(:intervention, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.text_area(:intervention, :size => "40x5", :class => "form-control", :placeholder => "Intervention") %> 
  </div>
 </div>
</div>
