<% @page_title = "Locations" %>

<div id="pads">
 <%= link_to("Add New Location", new_portfolio_location_path, :class => 'btn btn-success btn-sm') %>
 <%= link_to("Back", schedules_index_path, :class => "btn btn-default btn-sm") %>
</div>

<div class="panel panel-primary">
 <div class="panel-heading">
  List of locations
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @locations.size %> 
  </div>
   <%= @locations.size > 1 ? " locations found" : " location found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="location list">
    <tr class="header">
     <th>Address</th>
     <th>Latitude</th>
     <th>Longitude</th>
     <th>Actions</th>
    </tr>


   <% if !@locations.nil? %>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.address %></td>
        <td><%= location.latitude %></td>
        <td><%= location.longitude %></td>
        <td><%= link_to("Show", {:action => 'show', :id => location.id}, :class => 'btn btn-primary btn-xs') %>
        <% if policy(location).edit? %>
         <%= link_to("Edit", {:action => 'edit', :id => location.id}, :class => 'btn btn-warning btn-xs') %>
        <% end %>
        <% if policy(location).destroy? %>
         <%= link_to("Delete", [@ppa, location], confirm: "Are you sure?", :method =>"delete", :class => 'btn btn-danger btn-xs') %></td>
       <% end %>
      </tr>
    <% end %>
   <% end %>
 </table>
</div>


