<% @page_title = "Risks" %>

<div id="pads">
 <%= link_to("Add New Risk", [:new, @riskiness, :risk], :class => 'btn btn-success btn-sm') %>
 <% if @riskiness.appeal %>
  <%= link_to("Back to #{@riskiness.title}", decision_portfolios_path(:id => @riskiness), :class => "btn btn-default btn-sm") %>
 <% else %>
  <%= link_to("Back to #{@riskiness.title}", submit_appeal_portfolios_path(:id => @riskiness), :class => "btn btn-default btn-sm") %>
 <% end %>

</div>

<div class="panel panel-primary">
 <div class="panel-heading">
  Risks
 </div>
 <div class="panel-body">

  <div class="badge">
   <%= @risks.size %> 
  </div>
   <%= @risks.size > 1 ? " risks found" : " risk found" %>

  <div class="table-responsive">
   <table class="table table-striped table-hover" summary="risk list">
    <tr class="header">
     <th>Title</th>
     <th>Description</th>
     <th>Actions</th>
    </tr>

    <% @risks.each do |risk| %>
     <tr class="<%= cycle('odd', 'even') %>">
      <td><%= risk.title %></td>
      <td><%= truncate(risk.description, length: 50, omission: '...') %></td>
      <td class="actions">
      <%= link_to("Show", {:action => 'show', :id => risk.id}, :class => 'btn btn-primary btn-xs') %>
      <% if policy(risk).edit? %>
       <%= link_to("Edit", {:action => 'edit', :id => risk.id}, :class => 'btn btn-default btn-xs') %>
      <% end %>
      <% if policy(risk).destroy? %>
       <%= link_to("Delete", [@riskiness, risk], confirm: "Are you sure?", method: :delete,  :class => 'btn btn-danger btn-xs') %>
      <% end %>
       </td>
      </tr>
    <% end %>
   </table>
  </div>
