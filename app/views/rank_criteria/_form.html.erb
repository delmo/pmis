<%= error_messages_for(@rank_criterium) %>

<div  class="form-horizontal">
 <div class="form-group">
  <%= f.label(:criteria, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.text_field(:criteria, :class => "form-control", :placeholder => "Criteria") %> 
  </div>
 </div>
 
 <div class="form-group">
  <%= f.label(:description, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   <%= f.text_area(:description, :size => "40x5", :class => "form-control", :placeholder => "Description") %> 
  </div>
 </div>
 
 <div class="form-group">
  <%= f.label(:weight, :class => "col-sm-2 control-label") %> 
  <div class="col-sm-10">
   The maximum weight you can assign is <%= 1.00 - RankCriterium.all.sum(:weight) %> 
   <%= f.number_field(:weight, :class => "form-control", :step => 0.0001) %> 
  </div>
 </div>
</div>

